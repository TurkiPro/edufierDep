<%- include('../header.ejs') -%>
<body>
    <div class="container-fluid overflow-hidden">
        <div class="row">
            <%- include('../nav.ejs') -%>
            <div class="col-sm mt-xxl-0 mt-xl-0 mt-lg-5 mt-md-5 mt-sm-5 mt-5 pt-xxl-3 pt-xl-3 pt-lg-5 pt-sm-5 pt-5 p-3. min-vh-100">
                <div class="container lessons_container">
                    <% if (information.typeOfLesson === 1) { %>
                        <%- include('video.ejs') -%>
                    <%} else if (information.typeOfLesson === 2) { %>
                        <%- include('circles.ejs') -%>
                    <%} else if (information.typeOfLesson === 3) { %>
                        <%- include('cards.ejs') -%>
                    <%} else if (information.typeOfLesson === 4) { %>
                        <%- include('interactive_image.ejs') -%>
                    <%} else  { %>
                    <p> Other type </p>
                    <% } %>
                    <% if (nextLesson !== undefined ) { %>
                        <a href="/lessons/lesson/<%= information.id %>/next">Next lesson</a>
                    <% } %>
                    <br>
                    <% if (quiz !== undefined ) { %>
                        <a href="/quizzes/quiz/<%= quiz %>">start quiz</a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <!-- bootstrap script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>